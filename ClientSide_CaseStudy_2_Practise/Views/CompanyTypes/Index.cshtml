<div class="row">

	<div class="panel panel-primary">
		<div class="panel-heading clearfix">
			<div class="panel-title">
				Manage Company Types
				<div class="btn-group pull-right">
					<a asp-action="Create" asp-controller="CompanyTypes" class="btn btn-default btn-group-lg ">Add</a>
					<a href="#" class="btn btn-danger  btn-group-lg ">Delete</a>
				</div>
			</div>
		</div>

		<div class="panel-body">
			<div class="row">
				<div class="col-md-12">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>Type Name</th>
								<th>Created At</th>
								<th>Updated At</th>

								<th>&nbsp;</th>
							</tr>
						</thead>
						<tbody id="companyTypeTableBody"></tbody>
					</table>
					</div>
				</div>
				</div>
			</div>
	</div>


			<script>


				loadCompanyTypeData();
	
				function loadCompanyTypeData() {
					//Note: jQuery.ajax(..) is also often written is $.ajax(..)
					var $loadCompanyTypeDataHandler = jQuery.ajax({
						url: '/Api/CompanyTypes',
						method: 'GET',
						dataType: 'json',
						cache: false,
					});
					$loadCompanyTypeDataHandler.done(function (data, textStatus, jqXHR) {
						//This done method will
						//The (data) input parameter automatically captures the response from the
						//Get() API method which is labelled to handle this GET request.

						//I usually use the following code
						//to inspect the returned result captured by the data input parameter
						//from the web server.
						console.log(data);

						//After inspecting the data object with the console.log
						//I have clear picture of the structure and used
						var companyTypeList = data;
						var companyTypeId = '';
						var typeName = '';
						var createdAt = '';
						var updatedAt = ''
						var $tableElement = null;
						var $cellElement = null;
						var $rowElement = null;
						//-------- Find the table element -----------
						//I am using the $tableElement variable
						//to represent the found HTML element which has a matching id of courseTableBody
						$tableBodyElement = $('#companyTypeTableBody');

						//I want to build rows and cells (using tr and td HTML elements) so that
						//I can display type name, created at, updated at information
						//within the HTML table element, companyTypeTableBody. Recall that, I have already asked the
						//$tableBodyElement variable to represent (reference) the table element.

						//-------- Begin creating <tr> and <td> HTML element ------
						for (index = 0; index < companyTypeList.length; index++) {
							//Set this companyType variable to reference a companyType object
							//inside the companyTypeList Array.
							companyType = companyTypeList[index];
							//Copy out the company type information
							var companyTypeId = companyType.CompanyTypeId;
							var typeName = companyType.TypeName;
							createdAt = moment(companyType.CreatedAt).format("DD/MM/YYYY HH:MM");
							updatedAt = moment(companyType.UpdatedAt).format("DD/MM/YYYY HH:MM");
							//Create new HTML <tr> element.
							//At the same time let the $rowElement variable to represent it.
							$rowElement = $('<tr></tr>');
							//Create the 1st cell element which display Type Name.
							$cellElement = $('<td></td>', { text: typeName });
							$rowElement.append($cellElement);
							//Create the 2nd cell element which display Created At information
							$cellElement = $('<td></td>', { text: createdAt });
							$rowElement.append($cellElement);
							//Create the 3rd cell element which display Updated At information
							$cellElement = $('<td></td>', { text: updatedAt });
							$rowElement.append($cellElement);
							//---------------- Using jQuery() to create the hyperlink element using the <a></a> --------
							$hyperLinkElement = $('<a>Update Company Type</a>').attr('href', '/CompanyTypes/Update/' + companyTypeId);
							$hyperLinkElement.addClass('btn btn-primary');
							//The $hyperLinkElement eventually represents (references) a HTML element which is:
							//<a href="<base url>/CompanyTypes/<company type id>" class="btn btn-primary" >Edit Company Type</a>
							//-----------------Using jQuery() to creating the 4th cell for the row----------------------
							$cellElement = $('<td></td>');
							//-----------------Add the previous created hyperlink element, $hyperLinkElement
							//                 into the newly created 4th cell.
							//As a result, $cellElement references an element defined by:
							//<td><a href="<base url>/CompanyTypes/<company type id>" class="btn btn-primary" >Update Company Type</a></td>
							$cellElement.append($hyperLinkElement);
							$rowElement.append($cellElement);

							//Insert the $rowElement into the table element represented by $tableBodyElement.
							$tableBodyElement.append($rowElement);
							//----End of creating one row to display one company type by using <tr> and <td> HTML element ---
							//Proceed to the next company type object in the companyTypeList Array.
						}//end of for loop.
					}//end of JavaScript anonymous function
					)//end of the done() method;
					$loadCompanyTypeDataHandler.fail(function (data, textStatus, jqXHR) {
						noty({
							text: 'Ajax call has failed due to : ' + data.statusText, type: 'error',
							layout: 'center',
							template: '<div class="noty_message"><span class="noty_text"></span>'
						});//end of noty()
					})//end of $loadCompanyTypeDataHandler.fail()
				}//end of loadCompanyTypeData();

			</script>
