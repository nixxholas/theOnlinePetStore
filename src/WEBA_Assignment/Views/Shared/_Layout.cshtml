@using System.Security.Claims
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>The Online Pet Store</title>

    <script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/lib/quill/dist/quill.min.js"></script>
    <script src="~/lib/Semantic-UI/dist/semantic.min.js"></script>
    <link rel="stylesheet" href="~/lib/sweetalert/dist/sweetalert.css" />
    <link rel="stylesheet" href="~/css/typesettings-1.1.css" />
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-1.11.1/dist/jquery.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/lib/jqwidgets/jqwidgets/styles/jqx.base.css" type="text/css" />
    <link rel="stylesheet" href="~/lib/jqwidgets/jqwidgets/styles/jqx.metrodark.css" type="text/css" />
    <link rel="stylesheet" href="~/lib/magicsuggest/magicsuggest.css" type="text/css" />
    <script type="text/javascript" src="~/lib/jqwidgets/jqwidgets/jqx-all.js"></script>
    <script type="text/javascript" src="~/lib/moment/min/moment.min.js"></script>
    <script type="text/javascript" src="~/lib/jqwidgets/jqwidgets/globalization/globalize.js"></script>
    <script src="~/lib/magicsuggest/magicsuggest-min.js"></script>
    <link rel="stylesheet" href="~/lib/Semantic-UI/dist/semantic.css" />
    <script type="text/javascript" src="~/lib/accounting-js/accounting.min.js"></script>
    <script type="text/javascript" src="~/lib/money/money.min.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap-fileinput/css/fileinput.min.css" />
    <script src="~/lib/bootstrap-fileinput/js/fileinput.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/css/bootstrap.min.css"
          asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
          asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />


</head>
<body>
<div id="wrap">
	@if (User.Identity.IsAuthenticated)
	{
    <!-- Wrap all page content here -->


        <!-- Fixed navbar -->
		<div class="navbar navbar-default navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="#">Sample</a>
				</div>
				<div class="collapse navbar-collapse">
					<ul class="nav navbar-nav">
						@if (User.IsInRole("ADMIN") || User.IsInRole("MASTER"))
                        {
						<li><a asp-controller="UserManager" asp-action="Index">Manage User</a></li>
                        <li><a asp-controller="Categories" asp-action="Index">Manage Categories</a></li>
                        <li><a asp-controller="Brands" asp-action="Index">Manage Brands</a></li>
                        }
							<li class="dropdown ">
							<a href="#" id="drop2" data-toggle="dropdown" class="dropdown-toggle" role="button">
																		Products <b class="caret"></b></a>
							<ul class="dropdown-menu" role="menu" aria-labelledby="drop2">
								<li><a asp-controller="Products" asp-action="Index">Manage Products</a></li>
							</ul>
						</li>
						
					</ul>
					@await Html.PartialAsync("_LoginPartial")
				</div><!--/.nav-collapse -->
			</div>
		</div>
	}	else {
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a asp-controller="Home" asp-action="Index" class="navbar-brand">Sample</a>
				</div>
				<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav"></ul>
					@await Html.PartialAsync("_LoginPartial")
				</div>
			</div>
		</div>

		}

		<div class="container body-content">
			@RenderBody()
		</div>
		@RenderSection("scripts", required: false)
	</div><!-- end of div with id="wrap"-->
    <footer class="footer">
        <div class="container">
            <p class="text-muted">In memory of Web Applications Development.</p>
        </div>
 </footer>




</body>
</html>
