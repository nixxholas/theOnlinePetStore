    $dataCommunicationTracker.fail(function (data, textStatus, jqXHR) {
        swal("Oh no!", data.responseJSON.message, "error");
    });

    var descriptionBox = $('#descriptionBox');
    tinymce.init({
        selector: 'textarea',
        height: 250,
        theme: 'modern',
        plugins: [
