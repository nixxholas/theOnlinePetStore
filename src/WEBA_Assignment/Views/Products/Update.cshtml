        contentType: 'application/json',
        method: 'get',
        url: 'http://localhost:5008/API/PresetMetrics',
    });
    $dCTForPresetMetrics.done(function (data, textStatus, jqXHR) {
        for (i = 0; i < data.length; i++) {
            var liElement = "";
            metric = data[i];
